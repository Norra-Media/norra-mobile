{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@containers": ["containers"],
      "@containers/*": ["containers/*"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"], 
      "@assets/*": ["assets/*"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}